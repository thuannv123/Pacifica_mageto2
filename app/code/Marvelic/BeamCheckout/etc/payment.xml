        <group id="beamcheckout">
            <label>Beam Checkout</label>
        </group>
    </groups>
    <methods>
        <method name="beamcheckout_creditcard">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="beamcheckout_ewallet">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="beamcheckout_qrcode">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
    </methods>
</payment>

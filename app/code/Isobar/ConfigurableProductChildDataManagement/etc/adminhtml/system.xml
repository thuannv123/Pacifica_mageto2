<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="isobar_configurable_product_child_data" translate="label" type="text" sortOrder="-5000" showInDefault="1" showInWebsite="1"
                 showInStore="0">
            <label>Disable Child Product in Filter</label>
            <tab>isobar</tab>
            <resource>Isobar_Base::config</resource>

            <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <label>General</label>
                <field id="enable" type="select" translate="label" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Disable combine child product data for configurable product.</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="attributes" type="text" translate="label" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Disable combine data for this product attribute.</label>
                </field>
            </group>
        </section>
    </system>
</config>
